<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutGroupDetailItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/txtOrderGroupDetail"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:text="1."
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/txtGroupNameGroupDetail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignRight="@id/ckbMainLoanItem"
            android:text="Tung"
            android:textSize="20sp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnDeleteGroupDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="削除"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentBottom="true"></LinearLayout>
</RelativeLayout>